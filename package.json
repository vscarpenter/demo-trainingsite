{
  "name": "sunit-carpenter-learning-clone",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "generate:content": "node scripts/generate-content.js",
    "generate:search-index": "node scripts/generate-search-index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && node scripts/generate-content.js && node scripts/generate-search-index.js",
    "build": "tsc && vite build",
    "postbuild": "node scripts/optimize-build.js",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "content:update": "node scripts/content-workflow.js update",
    "content:validate": "node scripts/content-workflow.js validate",
    "content:list": "node scripts/content-workflow.js list",
    "content:init": "node scripts/content-workflow.js init",
    "deploy:init": "node scripts/deploy-config.js init",
    "deploy:validate": "node scripts/deploy-config.js validate",
    "deploy:list": "node scripts/deploy-config.js list",
    "optimize": "node scripts/optimize-build.js",
    "validate:build": "node scripts/validate-build.js",
    "build:full": "npm run content:validate && npm run build && npm run validate:build"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.50.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.3.6",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
